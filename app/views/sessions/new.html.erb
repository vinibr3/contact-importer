<div class='row'>
  <div class='col'>
    <h2><%= t('.title') %></h2>
    <%= form_with model: @user, local: true , url: sessions_path do |f| %>
      <div>
        <%= f.label :email, class: 'form-label' %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      <div class="mb-3">
        <%= f.label :password, class: 'form-label' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <div>
        <%= t('sessions.new.unregistered') %>
        <%= link_to t('registrations.new.title'), new_registration_path %>
      </div>
      <div>
         <%= f.submit t('.submit'), { class: 'btn btn-success' } %>
      </div>
    <% end %>
  </div>
</div>
